-var titulo = "Titulo principal"
-var titulos = ["Titulo Principal", "Subtitulo 1", "Subtitulo 2", "Subtitulo 3"]
-var usuario = "Angel"
mixin caja(imagen,titulo,contenido)
	.caja
		.caja__imagen: img(src="./images/"+imagen, alt="Imagen vacia")
		.caja__conatenido
			h3=titulo
			p=contenido
doctype html
html(lang="en")
	include ./componentes/head.pug
	body 
		header 
			h1 Platzi Games 
			if usuario 
				a Hola #{usuario}
			else 
				a.boton Registro
		section.intro 
			.intro__imagen: img(src="./images/imagen.png", alt="Imagen vacia") 
			.intro__contenido 
				h2= titulos[0]
				p 
					|Lorem ipsum, dolor sit amet consectetur 
					|adipisicing elit. Architecto ducimus deleniti 
					|magnam dolorum perspiciatis enim, modi corporis 
					|unde at veritatis, rem, velit nemo cupiditate 
					|minima aliquam neque praesentium iste sit
					span asd;lkjfa;solijopqwieurfal;skdjf
				a.boton Leer Mas
		main.contenido
			+caja('imagen.png',titulos[1],'Lorem ipsum, dolor sit amet consectetur')
			+caja('imagen.png',titulos[2],'Lorem ipsum, dolor sit amet consectetur')
			+caja('imagen.png',titulos[3],'Lorem ipsum, dolor sit amet consectetur')